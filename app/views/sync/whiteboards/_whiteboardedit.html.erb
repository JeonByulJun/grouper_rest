<form action="/whiteboard/update" method="put" data-remote=true id="whiteboardform">
  <input type="hidden" name="whiteboardid" value=<%=whiteboard.id%>>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <% if whiteboard.edit == true && whiteboard.user == current_user %>
    <textarea id="whiteboardarea" class="form-control" rows="18" name="content"><%=whiteboard.content%></textarea>
  <% else %>
    <textarea id="whiteboardarea" class="form-control" rows="18" name="content" readonly><%=whiteboard.content%></textarea>
  <% end %>
</form>
